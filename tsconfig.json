{
    "include": [
        "src/extern/*/*.js",
        "src/extern/*/*.d.ts",
        "src/util.ts",
        "src/*/*.ts",
        "src/*.ts"
    ],
    "exclude": [
        "*.*",
        "pkg/**"
    ],
    "compilerOptions": {
        "allowJs": true,
        "target": "es2021",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "removeComments": true,
        "lib": ["es2021"],
        "alwaysStrict": true,
        "strict": true
    }
}
